# Variables de entorno:
HOME=/home/ciencia_datos
PATH_TO_REPOS=${HOME}/repositorios
SHELL=/bin/bash
TZ=America/Los_Angeles

# Reinicia los contenedores
@daily echo "$(date): Reinicia contenedores." >> ${HOME}/log/cron.log && echo "$(${PATH_TO_REPOS}/servidor/src/stop_containers.sh && . ${HOME}/.profile && ${PATH_TO_REPOS}/servidor/src/start_containers.sh)" >> ${HOME}/log/cron.log && echo "" >> ${HOME}/log/cron.log
0 1 * * * echo "$(date): docker ps" >> ${HOME}/log/cron.log && echo "$(docker ps)" >> ${HOME}/log/cron.log && echo "" >> ${HOME}/log/cron.log
0 2 * * * echo "$(date): uptime" >> ${HOME}/log/cron.log && echo "$(uptime -p)" >> ${HOME}/log/cron.log && echo "" >> ${HOME}/log/cron.log

# Reinicia el servidor
@weekly echo "$(date): Reinicia el servidor." >> ${HOME}/log/cron.log && echo "$(uptime -p && ${PATH_TO_REPOS}/servidor/src/update_server.sh)" >> ${HOME}/log/cron.log && /sbin/shutdown -r now
@reboot echo "Servidor reiniciÃ³ rorrectamente: $(date)" >> ${HOME}/log/cron.log && echo "$(date): Inicia contenedores" >> ${HOME}/log/cron.log && echo "$(${PATH_TO_REPOS}/servidor/src/start_containers.sh)" >> ${HOME}/log/cron.log && echo "" >> ${HOME}/log/cron.log
@reboot sleep 100 && echo "$(date): docker ps" >> ${HOME}/log/cron.log && echo "$(docker ps)" >> ${HOME}/log/cron.log && echo "" >> ${HOME}/log/cron.log
@reboot sleep 200 && echo "$(date): uptime" >> ${HOME}/log/cron.log && echo "$(uptime -p)" >> ${HOME}/log/cron.log && echo "" >> ${HOME}/log/cron.log

# Respalda bases de datos:
0 12 * * * cp ${PATH_TO_REPOS}/gatos-trampas/data/gatos.db ${PATH_TO_REPOS}/datos-binarios/sqlite/gatos.db
0 12 * * * cp ${PATH_TO_REPOS}/gatos-trampas/data/gatos.db ${PATH_TO_REPOS}/datos-binarios/sqlite/gatos_$(date "+\%d").db
0 12 1 * * cp ${PATH_TO_REPOS}/gatos-trampas/data/gatos.db ${PATH_TO_REPOS}/datos-binarios/sqlite/gatos_$(date "+\%m\%d").db
0 12 * * * cp ${PATH_TO_REPOS}/tablero_api/data/testmake.log.csv ${PATH_TO_REPOS}/tablero_api/data/testmake.$(date "+\%d").csv
0 12 2,9,16,23,30 * * cp ${PATH_TO_REPOS}/tablero_api/data/testmake.log.csv ${PATH_TO_REPOS}/tablero_api/data/testmake.$(date "+\%m\%d").csv && echo "analista,es_make_exitoso,es_phony,existe_objetivo,id,maquina,objetivo,phony,repo,revision,timestamp" > ${PATH_TO_REPOS}/tablero_api/data/testmake.log.csv
